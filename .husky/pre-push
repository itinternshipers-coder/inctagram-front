  echo "‚ùå –ü—Ä–æ–≤–µ—Ä–∫–∏ –Ω–µ –ø—Ä–æ–π–¥–µ–Ω—ã! –ò—Å–ø—Ä–∞–≤—å –æ—à–∏–±–∫–∏ –ø–µ—Ä–µ–¥ –ø—É—à–µ–º."
  echo "   –õ–∏–Ω—Ç–∏–Ω–≥: pnpm lint"
  echo "   –°–±–æ—Ä–∫–∞: pnpm build"
  exit 1
